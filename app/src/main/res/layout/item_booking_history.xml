<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Room Name and Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvHistoryItemRoom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Phòng Lab"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorOnSurface" />

            <ImageView
                android:id="@+id/ivHistoryItemStatusIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvHistoryItemStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoàn thành"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Date and Time -->
        <TextView
            android:id="@+id/tvHistoryItemDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/01/2025"
            android:textSize="14sp"
            android:textColor="@color/colorOnSurface"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvHistoryItemTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:00 - 10:00"
            android:textSize="14sp"
            android:textColor="@color/colorOnSurface"
            android:layout_marginBottom="8dp" />

        <!-- Details Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvHistoryItemPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Giá: $100.00"
                android:textSize="14sp"
                android:textColor="@color/colorOnSurface" />

            <TextView
                android:id="@+id/tvHistoryItemParticipants"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Số người: 4"
                android:textSize="14sp"
                android:textColor="@color/colorOnSurface" />
        </LinearLayout>

        <!-- Rating -->
        <TextView
            android:id="@+id/tvHistoryItemRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đánh giá: 5/5"
            android:textSize="14sp"
            android:textColor="@color/colorOnSurface"
            android:layout_marginBottom="8dp" />

        <!-- Facilities -->
        <TextView
            android:id="@+id/tvHistoryItemFacilities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiện ích: Bảng trắng, TV"
            android:textSize="14sp"
            android:textColor="@color/colorOnSurface"
            android:layout_marginBottom="12dp"
            android:visibility="gone" />

        <!-- Feedback Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHistoryItemFeedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đánh giá"
            style="@style/Widget.Material3.Button.OutlinedButton" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

