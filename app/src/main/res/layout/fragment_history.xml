<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:padding="16dp">

    <!-- Summary Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/rounded_image_bg"
            android:padding="12dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng số phiên"
                android:textSize="12sp"
                android:textColor="@color/colorOnSurface" />

            <TextView
                android:id="@+id/tvHistoryTotalSessionsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/rounded_image_bg"
            android:padding="12dp"
            android:layout_marginStart="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng giờ"
                android:textSize="12sp"
                android:textColor="@color/colorOnSurface" />

            <TextView
                android:id="@+id/tvHistoryTotalHoursValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 giờ"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>
    </LinearLayout>

    <!-- Last Updated -->
    <TextView
        android:id="@+id/tvHistoryLastUpdated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cập nhật lần cuối: --"
        android:textSize="12sp"
        android:textColor="@color/colorOnSurface"
        android:layout_marginBottom="16dp" />

    <!-- Filter Chips -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/historyFilterGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:singleSelection="true"
        app:checkedChip="@id/chipHistoryAll">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipHistoryAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tất cả"
            android:checkable="true" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipHistoryCompleted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoàn thành"
            android:checkable="true" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipHistoryCancelled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã hủy"
            android:checkable="true" />
    </com.google.android.material.chip.ChipGroup>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHistory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/historyEmptyState"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chưa có lịch sử đặt chỗ"
            android:textSize="16sp"
            android:textColor="@color/colorOnSurface"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHistoryRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tải lại" />
    </LinearLayout>

</LinearLayout>

